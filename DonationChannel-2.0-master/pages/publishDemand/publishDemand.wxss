@import "../../colorui/main.wxss";

.body {
    width: 90%;
    margin-left: 5%;
    padding-top: 30rpx;
}

.location {
    font-weight: bold;
    font-size: 28rpx;
    opacity: .8;
    margin-bottom: 30rpx;
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;    
}
.tableContainer {
    background-color: white;
    border-radius: 20rpx;
    width: 100%;
    padding: 0 30rpx 0 30rpx;
    margin-bottom: 30rpx;
}

/*好好学习*/
.tableContainer .item {
    height: 120rpx;
    line-height: 120rpx;
    display: flex;
    justify-content: space-between;
}
/*好好学习*/
.tableContainer .item:not(:last-child) {
    border-bottom: dashed #ddd 1rpx;
}

.tableContainer .item .name {
    opacity: 0.8;
}

.submitContainer {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: white;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    padding: 0 30rpx 0 30rpx;
}
.submitContainer .money {
    color: grey;
    font-size: 0.6rem;
}

.submitContainer .submitBtn {
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    /*background-color: linear-gradient(45deg, #0081ff, #1cbbb4);*/
    align-self: center;
    text-align: center;
    color: white;
} 